primary = #00BCE3
secondary = #333

body
  background-color secondary
  color #DDD
  font-family monospace

*
  box-sizing border-box


.background-icon
  font-size 30em;
  color rgba(200,200,200,.2)
  position absolute
  z-index -1
  top 0
  right 50%
  transform translateX(50%)
  animation-duration .4s
  animation-fill-mode both


  @media (min-width: 720px)
    right 0
    transform translateX(0)


button

  &[disabled]
    background-color rgba(255, 255, 255, .3)
    color #CCC
    cursor not-allowed

  font-size 1.4em
  font-weight bold
  color secondary
  display block
  width 200px
  background-color primary
  border-radius 4px
  margin auto
  cursor pointer
  border 2px solid

  &:hover:not(&[disabled])
    background-color secondary
    color primary

div.intro
  text-align center

  h1
    margin 50px 0

ul
  margin auto
  padding 0
  max-width 600px
  font-size 1.3em
  display grid

  @media (min-width: 720px)
    grid-template-columns 1fr 1fr 1fr

  li
    list-style none
    margin 4px
    border-width 2px
    border-style solid
    border-radius 4px
    padding 4px
    cursor pointer
    background secondary
    background linear-gradient(90deg, rgba(0,212,255,1) 0%, rgba(0,212,255,1) var(--progress), secondary var(--progress), secondary 100%)
    
    color #333
    border-color #ccc

    .label
      color #ccc
      mix-blend-mode: difference;

    &:hover, &.picked
      color primary
      border-color primary

      .label
        color lighten(primary, 50%)


    div
      display flex

      span
        flex 1

